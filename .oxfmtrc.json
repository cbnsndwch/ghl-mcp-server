{
    "$schema": "./node_modules/oxfmt/configuration_schema.json",
    "ignorePatterns": [],
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none",
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "endOfLine": "lf",
    "semi": true,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": [
                "*.puml",
                "*.yml"
            ],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
